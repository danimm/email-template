#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/danimm/Projects/node_modules/.pnpm/mjml-cli@4.14.1/node_modules/mjml-cli/bin/node_modules:/Users/danimm/Projects/node_modules/.pnpm/mjml-cli@4.14.1/node_modules/mjml-cli/node_modules:/Users/danimm/Projects/node_modules/.pnpm/mjml-cli@4.14.1/node_modules:/Users/danimm/Projects/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/danimm/Projects/node_modules/.pnpm/mjml-cli@4.14.1/node_modules/mjml-cli/bin/node_modules:/Users/danimm/Projects/node_modules/.pnpm/mjml-cli@4.14.1/node_modules/mjml-cli/node_modules:/Users/danimm/Projects/node_modules/.pnpm/mjml-cli@4.14.1/node_modules:/Users/danimm/Projects/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/mjml" "$@"
else
  exec node  "$basedir/../../bin/mjml" "$@"
fi
